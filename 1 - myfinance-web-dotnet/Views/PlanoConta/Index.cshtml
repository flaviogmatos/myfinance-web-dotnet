@{
    ViewData["Title"] = "Plano de Contas";
}

<h3>@ViewData["Title"]</h3>
<button type="button" class="btn btn-block btn-primary" onclick="Novo()">Criar Item de Plano de Conta</button></br></br>
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Descrição</th>
        <th>Tipo</th>
        <th>#</th>
        <th>#</th>
    </tr>

    @{
        foreach (var item in (List<PlanoContaModel>)ViewBag.ListaPlanoConta)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Descricao</td>
                <td>@item.Tipo</td>
                <td><button type="button" class="btn btn-outline-warning" onclick="Atualizar(@item.Id)">Editar</button></td>
                <td><button type="button" class="btn btn-outline-danger" onclick="Excluir(@item.Id)">Excluir</button></td>
            </tr>
        }
    }
</table>

<script>
    function Novo()
    {
        window.location.href = "../PlanoConta/Cadastrar";
    }

    function Atualizar(id)
    {
        window.location.href = "../PlanoConta/Cadastrar/" +  id;
    }

    function Excluir(id)
    {
        window.location.href = "../PlanoConta/Excluir/" +  id;
    }
</script>